{
  "manifest_version": 3,
  "name": "Auto-Next YouTube Shorts",
  "version": "1.0",
  "description": "Auto-Next YouTube Shorts when video loops.",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/shorts/*"],
      "js": ["content.js"]
    }
  ]
}
